---
const { color, title, h3, subtitle, id } = Astro.props;
const textColor = `text-${color}`;
---

<section
  class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative"
  data-header-color={color}
  id={id}
>
  <div class="z-30 relative h-full flex flex-col">
    <header class="pt-40 text-center">
        {Astro.slots.header ? (
          <div class="flex flex-col items-center justify-center h-full">
            <!-- Renderiza el contenido pasado al slot header (ej. FoundationSeries) -->
            <slot name="header" />
            <h3 class={`${textColor} mt-[4px] text-[20px] font-medium`}>
                {subtitle}
            </h3>
          </div>
        ) : (
          <>
            <!-- Renderización de los títulos predeterminados -->
            {title && (
              <h2 class={`${textColor} text-[64px] font-medium`}>
                {title}
              </h2>
            )}
            {subtitle && (
              <h3 class={`${textColor} mt-[4px] text-[24px] font-medium`}>
                {subtitle}
              </h3>
            )}
            {h3 && (
              <p class={`${textColor} mt-[4px] text-sm`}>
                {h3}
              </p>
            )}
          </>
        )}
      </header>
  </div>

  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <slot name="background" />
  </div>
</section>
